#:kivy 1.8.0

##ScreenManager:
    ##id: screen_manager
    ##MainScreen:
        ##id: main_screen
        ##name: 'MainScreen'
        ##manager: screen_manager
    ##Screen1:
        ##id: screen1
        ##name: 'Screen1'
        ##manager: screen_manager
    ##SettingsScreen:
        ##id: settings_screen
        ##name: 'SettingsScreen'
        ##manager: screen_manager

<MainScreen>:
    BoxLayout:
        size_hint_y: 0.9
        size_hint_x: 0.9
        spacing: 50
        orientation: 'vertical'
        Label:
            text: "TapOsc"
            bold: True
            size_hint_y: 0.3
            font_size: "48dp"
            color: (0, 1, 0, 1)
        Label:
            text: "Send and Receive OSC data with your phone !"
            size_hint_y: 0.2
            font_size: "24dp"
            color: (0, 1, 0, 1)
        BoxLayout:
            spacing: 50
            size_hint_y: 0.1
            orientation: 'horizontal'
            Button:
                text: 'Ecran 1'
                color: (0, 1, 0, 1)
                font_size: "32dp"
                on_release: root.manager.current = ("Ecran 1")
            Button:
                text: 'Ecran 2'
                color: (0, 1, 0, 1)
                font_size: "32dp"
                on_release: root.manager.current = ("Ecran 2")

        BoxLayout:
            spacing: 50
            size_hint_y: 0.1
            orientation: 'horizontal'
            Button:
                text: 'Options'
                color: (0, 1, 0, 1)
                font_size: "32dp"
                on_release: app.open_settings()
            Button:
                text: 'Play'
                color: (0, 1, 0, 1)
                font_size: "32dp"
                on_release: app.do_play()
            Button:
                text: 'Quit'
                color: (0, 1, 0, 1)
                font_size: "32dp"
                on_release: app.do_quit()

<Screen1>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Nom de app = {}".format(app.name) # taposc
            font_size: "32dp"
        BoxLayout:
            Label:
                text: ''
            Button:
                size_hint_x: 0.3
                size_hint_y: 0.08
                text: 'Quit'
                color: (0, 1, 0, 1)
                font_size: "24dp"
                on_release: app.do_quit()

