#:kivy 1.8.0

<MainScreen>:
    BoxLayout:
        spacing: 50
        orientation: 'vertical'
        Label:
            text: "TapOsc"
            bold: True
            size_hint_y: 0.3
            font_size: "48dp"
            color: (0, 1, 0, 1)
        Label:
            text: '''Send and Receive OSC data\n      with your phone !'''
            size_hint_y: 0.2
            font_size: "24dp"
            color: (0, 1, 0, 1)
        BoxLayout:
            spacing: 50
            size_hint_y: 0.1
            orientation: 'horizontal'
            Button:
                text: 'Ecran 1'
                color: (0, 1, 0, 1)
                font_size: "32dp"
                #on_press:   root.do_connect()
                on_release: root.manager.current = ("Ecran 1")
            Button:
                text: 'Ecran 2'
                color: (0, 1, 0, 1)
                font_size: "32dp"
                on_release: root.manager.current = ("Ecran 2")

        BoxLayout:
            spacing: 50
            size_hint_y: 0.1
            orientation: 'horizontal'
            Button:
                text: 'Options'
                color: (0, 1, 0, 1)
                font_size: "32dp"
                on_release: app.open_settings()
            Button:
                text: 'Play'
                color: (0, 1, 0, 1)
                font_size: "32dp"
                on_release: app.do_play()
            Button:
                text: 'Quit'
                color: (0, 1, 0, 1)
                font_size: "32dp"
                on_release: app.do_quit()

<Screen1>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint_y: 0.95
            font_size: "36dp"
            text: "xy position"
            color: (0, 1, 0, 1)
        BoxLayout:
            size_hint_y: 0.05
            canvas.before:
                Color:
                    rgba: 0.5, 0.5, 0.5, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                canvas.before:
                    Color:
                        rgba: 0.5, 0.5, 0.5, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                size_hint_x: 0.8
                text: "Je suis le plus fort"
                font_size: "16dp"
            Button:
                size_hint_x: 0.2
                text: 'Quit'
                color: (0, 1, 0, 1)
                background_color: (0.8, 0.8, 0.8, 1)
                font_size: "24dp"
                on_release: app.do_quit()

